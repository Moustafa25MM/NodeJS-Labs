doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel='stylesheet' href='../public/main.css')
        title TODOS
    body
        main
            div(class="TODO") 
                h2(class="TODO__title") = MY Todo List
                ul(class="TODO__checklist")
                    each todo in todos
                        li(class="TODO__item")
                            h2= todo.title
                        label( for="todo" class="TODO__label")= todo.status
 


